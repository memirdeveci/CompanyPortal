<div class="container">
    <header>Edit Profile Form</header>
    <div class="progress-bar">
        <div class="step">
            <p>
                Step 1
            </p>
            <div class="bullet">
                <span>1</span>
            </div>
            <div class="check fas fa-check"></div>
        </div>
        <div class="step">
            <p>
                Step 2
            </p>
            <div class="bullet">
                <span>2</span>
            </div>
            <div class="check fas fa-check"></div>
        </div>
        <div class="step">
            <p>
                Step 3
            </p>
            <div class="bullet">
                <span>3</span>
            </div>
            <div class="check fas fa-check"></div>
        </div>
        <div class="step">
            <p>
                Step 4
            </p>
            <div class="bullet">
                <span>4</span>
            </div>
            <div class="check fas fa-check"></div>
        </div>
    </div>
    <div class="form-outer">
        <form method="post" asp-action="EditProfile" asp-controller="User" enctype="multipart/form-data">
            <input type="hidden" asp-for="ProfilePhoto" value="@Model.ProfilePhoto">

            <div class="page slide-page">
                <div class="title">
                    Profile Info:
                </div>
                <div class="field">
                    <div class="label">
                        Profile Photo
                    </div>
                    <div class="wrapper">
                        <div class="formDiv">
                            <input class="file-input" type="file" asp-for="ProfilePicture" hidden>
                            <i class='bi bi-cloud-arrow-up'></i>
                            <p>Browse File to Upload</p>
                        </div>

                        <p class="CompletedText" style="margin-top:30px"></p>
                    </div>
                </div>
               
                <div class="field" style="margin-top:225px;">
                    <button class="firstNext next">Next</button>
                </div>
            </div>
            <div class="page">
                <div class="title">
                    Personal Info:
                </div>
                <div class="field">
                    <div class="label">
                        Name
                    </div>
                    <input type="text" asp-for="Name" value="@Model.Name">
                </div>
                <div class="field">
                    <div class="label">
                        Surname
                    </div>
                    <input type="text" asp-for="Surname" value="@Model.Surname">
                </div>
                <div class="field">
                    <div class="label">
                        Username
                    </div>
                    <input type="text" asp-for="UserName" value="@Model.UserName" required>
                </div>
                <div class="field btns">
                    <button class="prev-1 prev">Previous</button>
                    <button class="next-1 next">Next</button>
                </div>
            </div>
            <div class="page">
                <div class="title">
                    Personal Info:
                </div>
                <div class="field">
                    <div class="label">
                        Date
                    </div>
                    <input type="date" asp-for="BirthDate" value="@Model.BirthDate.ToString("yyyy-MM-dd")">
                </div>
                <div class="field">
                    <div class="label">
                        Gender
                    </div>
                    <select asp-for="Gender">
                        <option value="@Gender.Male" selected>Male</option>
                        <option value="@Gender.Female">Female</option>
                    </select>
                </div>
                <div class="field">
                    <div class="label">
                        Email (Not Changeable)
                    </div>
                    <input type="hidden" asp-for="Email" value="@Model.Email">
                    <p>@Model.Email</p>
                </div>
                <div class="field btns">
                    <button class="prev-2 prev">Previous</button>
                    <button class="next-2 next">Next</button>
                </div>
            </div>
            <div class="page">
                <div class="title">
                    Personal Info:
                </div>
                <div class="field">
                    <div class="label">
                        Deparment Name (Not Changeable)
                    </div>
                    <input type="hidden" asp-for="DepartmentName" value="@Model.DepartmentName">
                    <p>@Model.DepartmentName</p>
                </div>
                <div class="field">
                    <div class="label">
                        City
                    </div>
                    <input type="text" asp-for="City" value="@Model.City">
                </div>
                <div class="field">
                    <div class="label">
                        Education
                    </div>
                    <input type="text" asp-for="Education" value="@Model.Education">
                </div>
                <div class="field btns">
                    <button class="prev-3 prev">Previous</button>
                    <button class="submit">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="~/js/Login.js"></script>
<script src="~/js/FileInput.js"></script>
