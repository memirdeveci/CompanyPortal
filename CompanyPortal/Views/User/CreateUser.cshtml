@model UserDto
@{
    Layout = null;
}
<link href="~/css/Login.css" rel="stylesheet" />

<div class="container">
    <header>User Create Form</header>
    <div class="progress-bar">
        <div class="step">
            <p>
                Name
            </p>
            <div class="bullet">
                <span>1</span>
            </div>
            <div class="check fas fa-check"></div>
        </div>
        <div class="step">
            <p>
                Dept
            </p>
            <div class="bullet">
                <span>2</span>
            </div>
            <div class="check fas fa-check"></div>
        </div>
        <div class="step">
            <p>
                Birth
            </p>
            <div class="bullet">
                <span>3</span>
            </div>
            <div class="check fas fa-check"></div>
        </div>
        <div class="step">
            <p>
                Submit
            </p>
            <div class="bullet">
                <span>4</span>
            </div>
            <div class="check fas fa-check"></div>
        </div>
    </div>
    <div class="form-outer">
        <form method="post">
            <div class="page slide-page">
                <div class="title">
                    Basic Info:
                </div>
                <div class="field">
                    <div class="label">
                        First Name
                    </div>
                    <input type="text" asp-for="Name" required>
                </div>
                <div class="field">
                    <div class="label">
                        Last Name
                    </div>
                    <input type="text" asp-for="Surname" required>
                </div>
                <div class="field">
                    <button class="firstNext next">Next</button>
                </div>
            </div>
            <div class="page">
                <div class="title">
                    Department Info:
                </div>
                <div class="field">
                    <div class="label">
                        Department
                    </div>
                    <select asp-for="DepartmentId" asp-items="@Model.DepartmentList" class="form-control" required>
                        <option value="">-- Select Dept --</option>
                    </select>
                </div>
                <div class="field">
                    <div class="label">
                        Position
                    </div>
                    <input type="text" asp-for="Position" required>
                </div>
                <div class="field btns">
                    <button class="prev-1 prev">Previous</button>
                    <button class="next-1 next">Next</button>
                </div>
            </div>
            <div class="page">
                <div class="title">
                    Date of Birth:
                </div>
                <div class="field">
                    <div class="label">
                        Date
                    </div>
                    <input type="date" asp-for="BirthDate">
                </div>
                <div class="field">
                    <div class="label">
                        Gender
                    </div>
                    <select asp-for="Gender" class="form-control">
                        <option value="@Gender.Male">Male</option>
                        <option value="@Gender.Female">Female</option>
                    </select>
                </div>
                <div class="field btns">
                    <button class="prev-2 prev">Previous</button>
                    <button class="next-2 next">Next</button>
                </div>
            </div>
            <div class="page">
                <div class="title">
                    Login Details:
                </div>
                <div class="field">
                    <div class="label">
                        Email
                    </div>
                    <input type="text" asp-for="Email" required>
                </div>
                <div class="field">
                    <div class="label">
                        Password
                    </div>
                    <input type="password" asp-for="Password" required>
                </div>
                <div class="field btns">
                    <button class="prev-3 prev">Previous</button>
                    <button class="submit">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="~/js/Login.js"></script>
